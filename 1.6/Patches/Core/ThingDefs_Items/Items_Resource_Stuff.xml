<Patch>

    <!-- Steel - Standard industrial material, solid all-around performance -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[defName="Steel"]</xpath>
        <value>
            <li Class="SurvivalTools.StuffPropsTool">
                <toolStatFactors>
                    <TreeFellingSpeed>1.15</TreeFellingSpeed>
                    <ConstructionSpeed>1.15</ConstructionSpeed>
                    <DeconstructionSpeed>1.15</DeconstructionSpeed>
                    <DiggingSpeed>1.15</DiggingSpeed>
                    <MiningYieldDigging>1.10</MiningYieldDigging>
                </toolStatFactors>
            </li>
        </value>
    </Operation>

    <!-- Silver - Soft precious metal, poor for hard work but decent for delicate tasks -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[defName="Silver"]</xpath>
        <value>
            <li Class="SurvivalTools.StuffPropsTool">
                <toolStatFactors>
                    <TreeFellingSpeed>1.05</TreeFellingSpeed>
                    <PlantHarvestingSpeed>1.10</PlantHarvestingSpeed>
                    <MedicalOperationSpeed>1.15</MedicalOperationSpeed>
                    <MedicalSurgerySuccessChance>1.10</MedicalSurgerySuccessChance>
                </toolStatFactors>
            </li>
        </value>
    </Operation>

    <!-- Gold - Very soft, terrible for structural work, but excellent for precision/medical -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[defName="Gold"]</xpath>
        <value>
            <li Class="SurvivalTools.StuffPropsTool">
                <toolStatFactors>
                    <TreeFellingSpeed>1.05</TreeFellingSpeed>
                    <PlantHarvestingSpeed>1.10</PlantHarvestingSpeed>
                    <DiggingSpeed>1.10</DiggingSpeed>
                    <MiningYieldDigging>1.15</MiningYieldDigging>
                    <ConstructionSpeed>1.05</ConstructionSpeed>
                    <MedicalOperationSpeed>1.20</MedicalOperationSpeed>
                    <MedicalSurgerySuccessChance>1.15</MedicalSurgerySuccessChance>
                </toolStatFactors>
            </li>
        </value>
    </Operation>

    <!-- Plasteel - Advanced composite, best all-around endgame material -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[defName="Plasteel"]</xpath>
        <value>
            <li Class="SurvivalTools.StuffPropsTool">
                <toolStatFactors>
                    <TreeFellingSpeed>1.30</TreeFellingSpeed>
                    <PlantHarvestingSpeed>1.30</PlantHarvestingSpeed>
                    <ConstructionSpeed>1.25</ConstructionSpeed>
                    <DeconstructionSpeed>1.25</DeconstructionSpeed>
                    <DiggingSpeed>1.30</DiggingSpeed>
                    <MiningYieldDigging>1.20</MiningYieldDigging>
                </toolStatFactors>
            </li>
        </value>
    </Operation>

    <!-- Wood - Weak material, minimal bonuses, but accessible early game -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[defName="WoodLog"]</xpath>
        <value>
            <li Class="SurvivalTools.StuffPropsTool">
                <toolStatFactors>
                    <TreeFellingSpeed>1.05</TreeFellingSpeed>
                    <PlantHarvestingSpeed>1.10</PlantHarvestingSpeed>
                    <DiggingSpeed>1.05</DiggingSpeed>
                    <MiningYieldDigging>1.05</MiningYieldDigging>
                    <ConstructionSpeed>1.10</ConstructionSpeed>
                </toolStatFactors>
            </li>
        </value>
    </Operation>

    <!-- Uranium - Dense, heavy, excellent for breaking/smashing but slow for precision -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[defName="Uranium"]</xpath>
        <value>
            <li Class="SurvivalTools.StuffPropsTool">
                <toolStatFactors>
                    <DiggingSpeed>1.35</DiggingSpeed>
                    <MiningYieldDigging>1.25</MiningYieldDigging>
                    <ConstructionSpeed>1.20</ConstructionSpeed>
                    <DeconstructionSpeed>1.30</DeconstructionSpeed>
                    <TreeFellingSpeed>1.15</TreeFellingSpeed>
                </toolStatFactors>
            </li>
        </value>
    </Operation>

    <!-- Jade - Hard gemstone, decent for precision work and mining -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[defName="Jade"]</xpath>
        <value>
            <li Class="SurvivalTools.StuffPropsTool">
                <toolStatFactors>
                    <TreeFellingSpeed>1.10</TreeFellingSpeed>
                    <PlantHarvestingSpeed>1.15</PlantHarvestingSpeed>
                    <MiningYieldDigging>1.15</MiningYieldDigging>
                    <DiggingSpeed>1.20</DiggingSpeed>
                    <MedicalOperationSpeed>1.10</MedicalOperationSpeed>
                </toolStatFactors>
            </li>
        </value>
    </Operation>
</Patch>
