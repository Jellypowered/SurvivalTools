<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- Add 2× Basic batteries to Crashlanded scenario -->
  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ScenarioDef[defName="Crashlanded"]</xpath>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ScenarioDef[defName="Crashlanded"]/scenario/parts</xpath>
        <value>
          <li Class="ScenPart_StartingThing_Defined">
            <def>StartingThing_Defined</def>
            <thingDef>ST_Battery_Basic</thingDef>
            <count>2</count>
          </li>
        </value>
      </li>
    </operations>
  </Operation>

  <!-- Add 1× Industrial battery to Rich Explorer scenario -->
  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ScenarioDef[defName="RichExplorer"]</xpath>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ScenarioDef[defName="RichExplorer"]/scenario/parts</xpath>
        <value>
          <li Class="ScenPart_StartingThing_Defined">
            <def>StartingThing_Defined</def>
            <thingDef>ST_Battery_Industrial</thingDef>
            <count>1</count>
          </li>
        </value>
      </li>
    </operations>
  </Operation>

</Patch>
