        <statBases>
            <Mass>2.5</Mass>
        </statBases>
        <graphicData>
            <texPath>Things/Item/Equipment/Tool/Axe</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <modExtensions>
            <li Class="SurvivalTools.SurvivalToolProperties">
                <baseWorkStatFactors>
                    <TreeFellingSpeed>1</TreeFellingSpeed>
                </baseWorkStatFactors>
                <defaultSurvivalToolAssignmentTags>
                    <li>PlantWorker</li>
                </defaultSurvivalToolAssignmentTags>
            </li>
        </modExtensions>
        <tools>
